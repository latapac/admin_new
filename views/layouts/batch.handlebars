<!-- Page Heading -->
<script src="/vendor/jquery/jquery.min.js"></script>

<!-- Main Content -->
<div id="content">

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">
                <span class="h6 text-gray-800">Batch ID: </span>{{batchObj.id}}</h1>
                <p>Last Updated: <span id="lastUpdated"></span></p>
        </div>

        <div class="row">

            <!-- Earnings (Monthly) Card Example -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Production Count</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{batchObj.productionCount}}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Earnings (Annual) Card Example -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-danger shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Batch Limit</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">0</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tasks Card Example -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Start Time</div>
                                <div class="row no-gutters align-items-center">
                                    <div class="col-auto">
                                        <div id="startTime" class="h5 mb-0 mr-3 font-weight-bold text-gray-800"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pending Requests Card Example -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">End Time</div>
                                <div id="endTime"  class="h5 mb-0 font-weight-bold text-gray-800"></div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-comments fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">

            <!-- Donut Chart -->
            <div class="col-xl-4 col-lg-5">
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">OEE</h6>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="chart-pie pt-4">
                            <canvas id="myPieChart"></canvas>

                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm">
                                <p style="float: left">Error Time: </p>
                                <p id="errorTime" style="float: right; margin-right: 20px;">0</p>
                            </div>
                            <div class="col-sm">
                                <p style="float: left">Error Count: </p>
                                <p id="errorCount" style="float: right; margin-right: 20px;">0</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm">
                                <p style="float: left">Idle Time: </p>
                                <p id="idleTime" style="float: right; margin-right: 20px;">0</p>
                            </div>
                            <div class="col-sm">
                                <p style="float: left">Stop Count: </p>
                                <p id="stopCount" style="float: right; margin-right: 20px;">0</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--<div class="col-xl-8 col-lg-7">

              <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">Logs</h6>
                </div>
                <div class="card-body">
                  <hr>
                  Styling for the area chart can be found in the <code>/js/demo/chart-area-demo.js</code> file.
                </div>
              </div>

            </div>-->


        </div>
    </div>
</div>

<!-- Page level plugins -->
<script src="/vendor/chart.js/Chart.min.js"></script>

<script>
    var batchObj = {{{ json batchObj }}}

    $(document).ready(function () {
        $("#errorCount").text(batchObj.OEE.ErrorCount);
        $("#errorTime").text(((parseInt(batchObj.OEE.ErrorTime)/1000000)) + " Minutes.");
        $("#stopCount").text(batchObj.OEE.StopCount);
        $("#idleTime").text(Math.floor(((parseInt(batchObj.OEE.IdleTime)/1000000))) + " Minutes.");

        $("#startTime").text(new Date(batchObj.Time.StartTime).toLocaleTimeString() + " " + new Date(batchObj.Time.StartTime).toDateString());
        $("#lastUpdated").text(new Date(batchObj.Time.LastUpdated).toLocaleTimeString() + " " + new Date(batchObj.Time.LastUpdated).toDateString());
        if(batchObj.Time.EndTime != "") {
            $("#endTime").text(new Date(batchObj.Time.EndTime).toLocaleTimeString() + " " + new Date(batchObj.Time.EndTime).toDateString());
        }
    });
    console.log("Batch Obj", batchObj);
    // Set new default font family and font color to mimic Bootstrap's default styling
    Chart.defaults.global.defaultFontFamily = 'Nunito', '-apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif';
    Chart.defaults.global.defaultFontColor = '#858796';

    // Pie Chart Example

    var idleTime = Math.floor(((parseInt(batchObj.OEE.IdleTime)/1000000)));
    var errorTime = Math.floor(((parseInt(batchObj.OEE.ErrorTime)/1000000)));
    var runTime = Math.floor(((parseInt(batchObj.OEE.RunTime)/1000000)));

    var ctx = document.getElementById("myPieChart");
    var myPieChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ["Idle Time", "Error Time", "Run Time"],
            datasets: [{
                data: [idleTime, errorTime, runTime],
                backgroundColor: ['#FFE17B', '#E51616', '#6CFFC2'],
                hoverBackgroundColor: ['#FFE17B', '#E51616', '#6CFFC2'],
                hoverBorderColor: "rgba(234, 236, 244, 1)",
            }],
        },
        options: {
            maintainAspectRatio: false,
            tooltips: {
                backgroundColor: "rgb(255,255,255)",
                bodyFontColor: "#858796",
                borderColor: '#dddfeb',
                borderWidth: 1,
                xPadding: 15,
                yPadding: 15,
                displayColors: false,
                caretPadding: 10,
            },
            legend: {
                display: false
            },
            cutoutPercentage: 80,
        },
    });

</script>